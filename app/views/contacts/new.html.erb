<div class="container">
  <form class="well" role="form">
    <div class="row">
      <h1 class="text-center">Contact Us</h1><br>
      <div class="col-md-4">
        <%= form_for @contact do |f| -%>
          <div class="form-group">
            <%= f.label :full_name %>
            <%= f.text_field :name, required: true, class: 'form-control', placeholder: 'How call you' %>
          </div>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, required: true, class: 'form-control', placeholder: 'example@mail.com' %>
          </div>
          
          <div class="hidden form-group">
            <%= f.label :nickname %>
            <%= f.text_area :nickname, hint: 'Leave this field blank', class: 'form-control' %>
          </div>
        </div>

        <div class="col-md-8">
          <div class="form-group">
            <%= f.label :message %>
            <%= f.text_area :message, as: :text, class: 'form-control', placeholder: 'Your message', rows: "7" %>
          </div>

          <div class="form-group">
            <%= f.submit "Send Message", class: 'btn btn-success btn-lg btn-block' %>
          </div>
        <% end -%>

      </div>


      <br><hr><br>
